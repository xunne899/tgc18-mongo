{{#extends 'base'}}
{{#block "content"}}

<h1>Food</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th>Tags</th>
        </tr>
        {{#each foodRecords}}
         <tr>
            <td>{{this.foodName}}</td>
            <td>{{this.calories}}</td>
            <td>{{join this.tags ", "}}</td>
         </tr>   
        {{/each}}
    </thead>

</table>

{{/block}}
{{/extends}}

